-------------------------------------------------------
tee $HOME/celestia-appd.service > /dev/null/
[Unit]
  Description=celestia-appd Cosmos
  After=network-online.target
[Service]
  User=$USER
  ExecStart=$(which celestia-appd)
  Restart=on-failure
  RestartSec=3
  LimitNOFILE=65535
[Install]
  WantedBy=multi
EOF

